<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="be.thomasmore.fonologischverkennen.TrainingOef1bActivity"
    tools:showIn="@layout/activity_training_oef1b">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp" >

        <ImageView
            android:id="@+id/background"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dragTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTarget1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorLightBlue"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvTarget2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorLightBlue"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvTarget3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorLightBlue"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomlinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="tag1"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="tag2"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomlinear2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="tag3"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="tag4"
            android:textColor="@color/colorBlack"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|center_horizontal"
            android:clickable="true"
            android:padding="0dp"
            android:src="@drawable/arrow_verder"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/skipButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom|center_horizontal"
            android:clickable="true"
            android:padding="0dp"
            android:src="@drawable/wrong"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>
